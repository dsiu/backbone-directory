<div class="page-header">
    <h1>Details of employee</h1>
</div>


<table class="table table-bordered">
    <tbody>
        <tr><th>firstName</th><td><%= employee.firstName %></td></tr>
        <tr><th>lastName</th><td><%= employee.lastName %></td></tr>
        <tr><th>managerId</th><td><%= employee.managerId %></td></tr>
        <tr><th>title</th><td><%= employee.title %></td></tr>
        <tr><th>department</th><td><%= employee.department %></td></tr>
        <tr><th>officePhone</th><td><%= employee.officePhone %></td></tr>
        <tr><th>cellPhone</th><td><%= employee.cellPhone %></td></tr>
        <tr><th>email</th><td><%= employee.email %></td></tr>
        <tr><th>city</th><td><%= employee.city %></td></tr>
        <tr><th>picture</th><td><%= employee.picture %></td></tr>
        <tr><th>twitterId</th><td><%= employee.twitterId %></td></tr>
        <tr><th>blogURL</th><td><%= employee.blogURL %></td></tr>    
    </tbody>
</table>

<div class="well">
    <%- link_to('<i class="icon-edit icon-white"></i> Edit', path_to.edit_employee(employee), {class: 'btn btn-primary'}) %>
    <%- link_to('<i class="icon-remove icon-white"></i> Delete', path_to.employee(employee), {class: 'btn btn-danger', method: 'delete', remote: true, jsonp: '(function (u) { location.href = u; })'}) %>
    or
    <%- link_to('Back to index', path_to.employees()) %>
</div>